#include <iostream>
using namespace std;

int potencia_a(int n);
int potencia_b(int n);

int potencia_a(int n) {

	cin >>n;
	int i;
	long long int resultado2;
	for (i=0; i<=n; i++){

		int resultado1;

		if (i==0){

			resultado1 = 1;
		}

		else{

			resultado1 = resultado1 * 2;
			resultado2 = resultado1 + potencia_a(n);
		}
	}

	return resultado2;
	cout << resultado2 << endl;
}

int potencia_b(int n) {

	cin >>n;
	int i;

	long long int resultado4;

	for (i=0; i<=n; i++){

		int resultado1;

		if (i==0){

			resultado1 = 1;
		}

		else{

			int resultado3 = resultado3 * 2;
			resultado4 = resultado3 + (potencia_b(n+1) -1);

		}
	}
	return resultado4;

}

int main() {

	int n;
	potencia_a(n);
	potencia_b(n);
}





