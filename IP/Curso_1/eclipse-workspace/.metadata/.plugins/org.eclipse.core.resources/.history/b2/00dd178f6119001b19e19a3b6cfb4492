#include <iostream>
using namespace std;

const float sqrt;

float ecuacion2Grado_p (float a, float b, float c) {

	float raiz_cuadrada_p = b*b+4*a*c;

	float sqrt;

	float positivo;

	positivo = (-b + sqrt(raiz_cuadrada_p)) / (2*a);

	return positivo;

}

float ecuacion2Grado_n (float a, float b, float c) {

	float raiz_cuadrada_n= b*b-4*a*c;

	float negativo;

	negativo = (-b - sqrt(raiz_cuadrada_n)) / (2*a);

	return negativo;

}

int main() {

	float a;
	float b;
	float c;
	float resultado1;
	float resultado2;

	cout << "Programa que calcule las raices de una ecuación de 2ªgrado: "<<endl;

	cout << "Introduce el valor de a: "<<endl;
	cin >> a;

	cout << "Introduce el valor de b: "<<endl;
	cin >> b;

	cout << "Introduce el valor de c: "<<endl;
	cin >> c;

	resultado1 = ecuacion2Grado_p (a,b,c);
	resultado2 = ecuacion2Grado_n (a,b,c);
}

